<%= "<tr id=\"new_peripheral_" + periph.id.to_s + "\">" %>
	<td><%= periph.serial_number%></td>
	<td><%= periph.model%></td>
	<td>
		<% form_remote_tag :url => { 	:action => :edit_peripheral } do %>
			<%= hidden_field_tag('id', periph.id)%>
			<%= submit_tag("Edit")%>
		<% end %>
	</td>
	<td>				
		<% form_remote_tag :url => { 	:action => :delete_peripheral_from_po },
										:confirm	=>	("Are you sure you want to delete this peripheral?") do %>
			<%= hidden_field_tag('id', periph.id)%>
			<%= submit_tag("Delete")%>
		<% end %>
	</td>
</tr>