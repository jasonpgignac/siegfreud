<div>
	<%= link_to "View History", 
			computer_actions_path(@computer), 
			:popup => true %>
	<%= link_to "Print Record", 
			{ 	:controller => "computers", 
				:action => "show", 
				:id => @computer.serial_number, 
				:format => "pdf" }, 
			:popup => true %>
</div>
<div class="databox">
	Serial: <%= @computer.serial_number %><br />
	Model: <%= @computer.model %><br />
	Platform: <%= @computer.system_class %><br />
	MAC Address: <%= @computer.mac_address %><br />
	PO Number: <%= @computer.po_number %><br />
	Division: <%= @computer.division.display_name %><br />
</div>
<div class="databox">
	Stage: <%= @computer.stage.name %>
	<% if (@computer.stage != "Storage" && @computer.stage != "Disposal")%>
		Owner: <%= @computer.owner %><br />
		System Role: <%= @computer.system_role %><br />
		Name: <%= @computer.name%><br />
		Domain: <%= @computer.domain%>
	<% end %>
	<% if (@computer.stage =~ /(Storage)|(Disposal)|(Retrieval)|(Repair)/) %>
		Location: <%= @computer.location %>
	<% end %>
</div>
<% if (@computer.stage.has_deployment)%>
	<%= closed_disclosure_area("assigned_licenses", computer_licenses_path(@computer.serial_number, :format => :json)) %>
	<div id='assigned_licenses'></div>
	<%= closed_disclosure_area("installed_peripherals", computer_peripherals_path(@computer.serial_number, :format => :json)) %>
	<div id='installed_peripherals'></div>
	<% @computer.services_of_type("ComputerInformation").each do |service| %>
		<%= closed_computer_service_disclosure_area(service, @computer) %>
		<div id="<%=service_div_name(service)%>"></div>
	<% end %>
	<% @computer.services_of_type("SoftwareManagement").each do |service| %>
		<%= closed_computer_service_disclosure_area(service, @computer) %>
		<div id="<%=service_div_name(service)%>"></div>
	<% end %>
<% end %>

<%= link_to("Edit", edit_computer_path(@computer.serial_number))%> |
<%= link_to("Back", computers_path)%>